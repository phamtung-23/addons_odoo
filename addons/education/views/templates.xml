    <template id="courses_detail" name="Courses Detail">
        <t t-call="website.layout">
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
            <link href="/education/static/src/css/education_style.css" rel="stylesheet" type="text/css"/>
            <script src="/education/static/src/js/education.js" type="text/javascript" />
            <t t-foreach="courses" t-as="course">
                <div class="oe_structure"/>
                <div class="container mt-3">
                    <div class="row">
                        <div class="col-8">
                            <div class="container text-left">
                                <h3 class="text-dark"><t t-esc = "course.name"/></h3>
                                <p t-field="course.html_description"/>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-center">
                                <img class="rounded" t-if="course.image_url" t-att-src="course.image_url" width="400px"/>
                                <h3 class="m-3"><b>Free</b></h3>
                                <a href="#" class="btn btn-primary mt-1"
                                    style="box-shadow: 2px 2px 0px 0px rgba(255,255,255,1);">
                                    Start now
                                </a>
                            </div>
                            <ul style="list-style-type:none;">
                                <li><i class="fa fa-tachometer" aria-hidden="true"></i> <t t-esc="course.level_of_course"/></li>
                                <li><i class="fa fa-tachometer" aria-hidden="true"></i> <t t-esc="course.type_of_course"/></li>
                            </ul>
                        </div>
                    </div>
                </div>

                
            </t>
        </t>
    </template>
</odoo>