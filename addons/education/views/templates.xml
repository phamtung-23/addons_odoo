    <template id="course_template" >
        <t t-call="website.layout">
            <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
            <link href="/education/static/src/css/education_style.css" rel="stylesheet" type="text/css"/>
            <script src="/education/static/src/js/education.js" type="text/javascript" />
            <script src="http://cdnjs.cloudflare.com/ajax/libs/gsap/1.18.0/TweenMax.min.js"></script>

            <!-- ###### -->
            <div class="oe_structure"/>
            <div class="container">
                <div class="oe_structure"/>    
                <h2 class="mt-3 text-center">Courses</h2>
                <div class="row">
                    <t t-foreach="courses" t-as="course">
                        <div class="col-3 p-2">
                                <div class="card w-100">
                                    <div class="card-img-top">
                                        <a t-attf-href="/course/#{course.id}">
                                            <img class="image-main rounded" t-if="course.image_url" t-att-src="course.image_url"/>
                                        </a>
                                    </div>
                                    <div class="card-body" id="card_body">
                                        <a t-attf-href="/course/#{course.id}">
                                            <div t-field = "course.name" class="card-title fs-6"/>
                                        </a>
                                        <div class = "mt-1" id="tags">
                                            <p t-field = "course.type_of_course" class="badge bg-danger"/>
                                            <p t-field = "course.level_of_course" class="badge badge-success"/>
                                        </div>
                                        <p class="card-text fs-6">With <t t-esc = "course.number_of_lesson" /> lessons</p>
                                    </div>
                                </div>
                            
                        </div>
                    </t>
                </div>
                <div class="oe_structure"/>
            </div>
            <div class="oe_structure"/>
        </t>

   </template>
