<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template inherit_id="lesson_one.sub_report_template" id="sub_report_template_extend">
        <xpath expr="//div[hasclass('page')]" position="replace">
            <div class="page">
                <h1>Inherit Report Task Infomation</h1>
                <div>
                    Title:<h1 t-esc="doc.title"/>
                </div>
                <div>
                    Description: <p t-esc="doc.description"/>
                </div>
                <div>
                    priority: <p t-esc="doc.priority"/>
                </div>
                <div>
                    stage: <p t-esc="doc.stage"/> 
                </div>
            </div>
        </xpath>
    </template>

</odoo>
