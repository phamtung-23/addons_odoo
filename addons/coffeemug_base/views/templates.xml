<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="custom_title" name="change title" inherit_id="web.layout">
        <xpath expr="//title" position="replace">
            <title>SIRS</title>
        </xpath>
    </template>
    <template id="custom_favicon" name="Change Favicon" inherit_id="web.layout">
        <xpath expr="//link[@rel='shortcut icon']" position="replace">
            <link rel="shortcut icon" type="image/x-icon" href="/coffeemug_base/static/src/img/favicon.png"/>
        </xpath>
    </template>


    <record id="res_users_customizations_form" model="ir.ui.view">
            
        <field name="name">res.users.form.inherit</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="mail_bot_hr.res_users_view_form_preferences"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='odoobot_state']" position="replace">
                <div></div>
            </xpath>
        </field>
        
    </record>
    <!-- res.users.preferences.form -->
    
</odoo>

